<!--pages/operation/operation.wxml-->
<view class='container'>
    <form bindsubmit='formSubmit' bindreset='formReset'>
        <input name="id" type="hidden" value="{{id}}" hidden/>
        <input name="userId" type="hidden" value="{{userId}}" hidden/>
        <view class='row'>
            <input type='text' name="contact" placeholder='请输入您的联系方式' value='{{contact}}'/>
        </view>
        <view class='row'>
            <textarea type='text' name="desctription" placeholder='请输入您的意见建议' value='{{desctription}}'/>
        </view>
        <button type='primary' form-type='submit'>提交</button>
    </form>
</view>
